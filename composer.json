{
    "name": "jitesoft/loauthd",
    "description": "OAuth2 bridge for Lumen using doctrine dbal/orm and league/oauth2-server as backbone.",
    "require": {
        "ext-openssl": ">=7.2",
        "php": ">=7.2",
        "league/oauth2-server": "^7.2.0",
        "jitesoft/exceptions": "^2.2.0",
        "laravel-doctrine/orm": "^1.4",
        "jitesoft/loggers": "^1.1",
        "phpseclib/phpseclib": "^2.0",
        "zendframework/zend-diactoros": "^1.7",
        "symfony/psr-http-message-bridge": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "mikey179/vfsStream": "^1.6",
        "squizlabs/php_codesniffer": "^3.3",
        "mockery/mockery": "^1.1",
        "php-mock/php-mock": "^2.0",
        "laravel-doctrine/migrations": "^1.1",
        "laravel/lumen-framework": "^5.6"
    },
    "suggest": {
        "laravel-doctrine/migrations": "^1.1",
        "laravel/lumen-framework": "^5.6"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Tegn√©r",
            "email": "johannes@jitesoft.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jitesoft\\Loauthd\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jitesoft\\Loauthd\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration=phpunit.xml",
        "stylecheck": "phpcs -p --standard=style.xml src"
    }
}
