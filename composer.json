{
    "name": "jitesoft/loauthd",
    "description": "OAuth2 bridge for Lumen using doctrine dbal/orm.",
    "require": {
        "ext-openssl": ">=7.1",
        "php": ">=7.1",
        "league/oauth2-server": "^6.1",
        "jitesoft/exceptions": "^2.0",
        "laravel-doctrine/orm": "^1.4",
        "jitesoft/loggers": "^1.0",
        "phpseclib/phpseclib": "^2.0",
        "illuminate/support": "^5.5",
        "illuminate/container": "^5.5",
        "illuminate/config": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "mikey179/vfsStream": "^1.6",
        "squizlabs/php_codesniffer": "^3.2",
        "mockery/mockery": "^1.0",
        "php-mock/php-mock": "^2.0",
        "laravel/lumen-framework": "^5.5"
    },
    "suggest": {
        "laravel/lumen-framework": "^5.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Tegn√©r",
            "email": "johannes@jitesoft.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jitesoft\\Loauthd\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jitesoft\\Loauthd\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration=phpunit.xml",
        "stylecheck": "phpcs -p --standard=style.xml src"
    }
}
